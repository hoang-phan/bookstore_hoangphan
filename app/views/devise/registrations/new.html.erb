<% breadcrumb :signup %>
<% provide(:title, "Sign up") %>
<h2 class="title1">Sign up</h2>
<p class="guide">Fill out the information below</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
  <div class="form-div">
    <p class="form-div-title">Mandatory fields</p>
    <div class="form-div-content">
      <div><%= f.label :email %>
      <%= f.email_field :email, autofocus: true %></div>

      <div><%= f.label :password %>
        <%= f.password_field :password, autocomplete: "off" %></div>

      <div><%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %></div>
    </div>
  </div>
  <div class="form-div">
    <p class="form-div-title">Optional fields</p>
    <div class="form-div-content">
      <div><%= f.label :full_name %>
          <%= f.text_field :full_name %></div>

      <div><%= f.label :birthday %>
        <%= f.text_field :birthday %></div>

      <div><%= f.label :phone %>
        <%= f.text_field :phone %></div>
    </div>
  </div>
  <div><%= f.submit "Sign up", class: "btn-sign" %></div>
<% end %>
<div class="other">
  <%= render "devise/shared/links" %>
</div>
